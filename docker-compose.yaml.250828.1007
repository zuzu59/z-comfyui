# Sources: https://noted.lol/comfyui/

services:
    comfyui-boot:
        stdin_open: true
        tty: true
        container_name: comfyui-cu124
        ports:
            - 8288:8188
        volumes:
            - ./data:/root
        image: yanwk/comfyui-boot:cu124-slim
#        image: yanwk/comfyui-boot:cu124-megapak
        deploy:
            resources:
                reservations:
                    devices:
                        - driver: nvidia
                          count: all
                          capabilities:
                              - gpu


